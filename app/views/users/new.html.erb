<% if flash[:message] %>
<p><%= flash[:message] %></p>
<% end %>


<h2>User Create Form</h2>
<%= form_for @user, html: {class: "ui form"} do|f| %>
<div class="field">
<%= f.text_field :name, placeholder: 'Name' %>
</div>
<div class="field">
<%= f.label :neighborhood, "Select Your Neighborhood: " %>
<%= f.collection_select(:neighborhood_id, Neighborhood.all, :id, :name) %>
</div>
<div class="field">
<%= f.text_field :email, placeholder: 'Email' %>
</div>

<div class="field">
<%= f.text_field :password, placeholder: 'Password' %>
</div>
<div class="field">

<%= f.text_field :password_confirmation, placeholder: 'Password Confirmation' %>
</div>
<%= f.submit 'Submit', class: "ui teal submit button" %>
<% end %>


