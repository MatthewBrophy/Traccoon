
<h2><%= @raccoon.name %></h2>

<b>Favorite Food:</b> <%= @raccoon.favorite_food %><br>
<b>Disposition:</b> <%= @raccoon.disposition %><br>
<b>Size:</b> <%= @raccoon.size %><br>
<b>Gender:</b> <%= @raccoon.gender %><br>
<%= form_for @raccoon do |f| %>
  <b>Seen At:</b> <%= f.collection_select :location_ids, @raccoon.locations.all, :id, :address %>
<% end %>

<%= form_for ([@raccoon, @comment]) do |f| %>
  <%= f.label :comment_title, "Comment Title" %>
  <%= f.text_field :comment_title %>

  <%= f.label :comment_text, "Comment" %>
  <%= f.text_area :comment_text %>

  <%= f.submit %>
<% end %>

<ul>
  <% @raccoon.comments.each do |comment| %>
  <div><p>Title: <%= comment.comment_title %></p>
  <p>Comment: <%= comment.comment_text %></p></div>
  <%= link_to  "Delete Comment", raccoon_comment_path(@raccoon, comment), method: :delete %>
  <% end %>
</ul>

<%= image_tag (@raccoon.picture)%><br>