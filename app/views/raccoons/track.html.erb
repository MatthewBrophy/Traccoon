<div class="container">
  <div class="row">
    <div class="col">    
    </div>
    <div class="col-6">    
      <h1 class="text-center">Where has <%= @raccoon.name %> been lately...</h1>
      <%= link_to image_tag(@raccoon.picture, size:"640x400", class: 'img-thumbnail'), @raccoon %>
    </div>
    <div class="col">    
    </div>
  </div>

<br>
<h3 class="text-center">Have you seen <%= @raccoon.name %> recently? <%= link_to  "Create a sighting report", new_report_path %></h3>
<br>

<div class="card-columns">
  <% @raccoon.gmaps_sightings.each do |address|  %>  
  <div class="card img-thumbnail">
    <iframe class="track-iframe"
    src="https://www.google.com/maps/embed/v1/place?key=<%=ENV["API_KEY"]%>&q=<%=address%>" allowfullscreen>
    </iframe>
    <div class="card-body">
      <p class="card-text text-center"><%= address.gsub("+", " ").gsub(",", ", ") %></p>
    </div>
  </div>
<% end %>  
</div>

</div>




