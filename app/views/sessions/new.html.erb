
<% if flash[:message] %>
<p><%= flash[:message] %></p>
<% end %>


<div class="ui middle aligned center aligned grid">
  <div class="column login-column">
    <h2 class="ui teal image header">
      <%= image_tag("raccoon.png", height: 50, class: 'image') %>
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <%= form_for :user, url: sessions_path, html: {class: "ui large form"} do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :email, placeholder: 'Email' %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.text_field :password, placeholder: 'Password' %>
          </div>
        </div>
        <%= f.submit "Login", class: "ui teal submit button" %>
      </div>
    <% end %>

    <div class="ui message">
      <%= link_to  "New to us? Sign up!", new_user_path %>
    </div>
  </div>
</div>





