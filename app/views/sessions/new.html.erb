
<% if flash[:message] %>
<p><%= flash[:message] %></p>
<% end %>

<%= form_for :user, url: sessions_path do |f| %>
<%= f.label :email, "Email" %>
<%= f.text_field :email %>

<%= f.label :password, "Password" %>
<%= f.text_field :password %> 
<%= f.submit %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
<% end %>